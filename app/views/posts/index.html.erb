<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h1>TUVINO</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Numeros</th>
      <th>Commentario</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.to_date %></td>
        <td><%= link_to 'Mostrar', post, class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_post_path(post), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Borrar', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
